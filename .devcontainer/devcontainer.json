{
	"name": "Expo",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// Update 'VARIANT' to pick a Node version: 16, 14, 12.
			// Append -bullseye or -buster to pin to an OS version.
			// Use -bullseye variants on local arm64/Apple Silicon.
			"VARIANT": "16-bullseye"
		}
	},
	"forwardPorts": [
		8081,
		19000,
		19001,
		19002,
		19003,
		19004,
		19005,
		19006
	],
	"portsAttributes": {
		"8081": {
			"label": "Metro bundler",
		},
		"19000": {
			"label": "Expo dev server"
		},
		"19006": {
			"label": "Expo web"
		}
	},
	"appPort": [
		8081,
		19000,
		19001,
		19002,
		19003,
		19004,
		19005,
		19006
	]
}
